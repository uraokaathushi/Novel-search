
<div class='container px-5 px-sm-0'>

 <div class="mb-3"></div>

 <div class='row'><h4 class="table-active">作品一覧</h4></div>

 <div class="mb-md-3"></div>

 <table class="table table-hover table-inverse">

    <div class='row'>
     <thead class="thead-light">
     <tr>
     <th class='col-md-3'>作品タイトル</th>
     <th class='col-md-6'>レビュー</th>
     <th class='col-md-3'></th>
     </tr>
     </thead>
    </div>



 <div class='row'>
   <tbody class="text-left">
     <% @novels.each do |novel| %>
    <tr>
     <td><%= novel.title %></td>
     <td><%= novel.review.present? ? novel.review : "レビューはありません" %></td>
     <td>
     <%= link_to 'レビュー削除', destroy_review_admin_novel_path(novel), method: :delete, data: { confirm: 'Are you sure?' }, style: 'color: red;' %>
     </td>
    </tr>
      <% end %>
     </tbody>
 </div>
 </table>

 <div class='row text-center'>
  <div class='col-md-3'></div>
  <div class='col-md-6'>
   <%= paginate @novels %></div>
  <div class='col-md-3'></div>
</div>