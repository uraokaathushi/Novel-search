
<div class='container top'>
 <div class="row mb-3"></div>

  <div class="mb-3"></div>

  <div class='row'>
   <div class="col-md-4"></div>
   <div class="col-md-4"><h4>レビュー管理画面</h4></div>
   <div class="col-md-4"></div>
  </div>

  <div class="mb-md-3"></div>


     <%= form_with url: admin_novels_path(), method: :get, local: true do |f| %>
       <div class="row">
        <div class="col-md-1"></div>
        <div class="form-group col-md-8">
          <%= f.text_field :content, class: "form-control" %>
        </div>
        <div class="form-group col-md-1">
          <%= f.select :method, options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}) %>
        </div>
        <div class="form-group col-md-2">
         <%= button_tag type: "submit", class: "border rounded-pill shadow-sm search-btn" do %>
          <i class="fas fa-search">検索</i>
         <% end %>
        </div>
      </div>
     <% end %>


 <div class="mb-md-3"></div>

  <table class="table table-hover table-inverse">
    <div class='row'>
     <thead class="thead-light">
     <tr>
     <th class='col-md-4'>作品タイトル</th>
     <th class='col-md-6'>レビュー</th>
     <th class='col-md-2'></th>
     </tr>
     </thead>
    </div>

   <div class='row'>
    <tbody class="text-left">
      <% @novels.each do |novel| %>
      <tr>
       <td><%= novel.title %></td>
       <td><%= novel.review.present? ? novel.review : "レビューはありません" %></td>
       <td>
        <%= link_to 'レビュー削除', destroy_review_admin_novel_path(novel), method: :delete, data: { confirm: 'Are you sure?' }, style: 'color: red;' %>
       </td>
      </tr>
     <% end %>
    </tbody>
   </div>
  </table>

 <div class='row text-center'>
  <div class='col-md-3'></div>
  <div class='col-md-6'>
   <%= paginate @novels %></div>
  <div class='col-md-3'></div>
</div>

 <div class="mb-5"></div>
 <div class='row'></div>
</div>