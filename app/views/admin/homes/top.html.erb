 <div class="container top">
 <% if flash[:notice].present? %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
 <% end %>
  <div class="row mb-2"></div>
   <div class='row'>
    <div class='col-md-12 text-center'>
    <h3 class=='text-center'>管理者トップページ</h3>
    </div>
    </div>
   <div class="row mb-5"></div>
      <% @novels.each do |novel| %>
         <div class='row'>
          <div class="col-md-11">
          <%= render 'public/novels/novel', novel: novel %>
          </div>
          <div class="col-md-1">
           <% if current_admin %>
           <%= link_to '削除', admin_novel_path(novel), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
           <% end %>
          </div>
        </div>
       <div class="mb-4"></div>
       <div class="divider"></div>
      <% end %>
   <div class="mb-5"></div>
   <div class='row text-center'>
    <div class='col-md-3'></div>
    <div class='col-md-6'>
      <%= paginate @novels %>
    </div>
    <div class='col-md-3'></div>
   </div>

 <div class="mb-5"></div>
 <div class='row'></div>

 </div>
