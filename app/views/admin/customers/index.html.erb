
<div class='container px-5 px-sm-0'>

 <div class="mb-3"></div>

 <div class='row'><h4 class="table-active">会員一覧</h4></div>

 <div class="mb-md-3"></div>

 <table class="table table-hover table-inverse">

    <div class='row'>
     <thead class="thead-light">
     <tr>
     <th class='col-md-2'>会員ID</th>
     <th class='col-md-3'>氏名</th>
     <th class='col-md-3'>メールアドレス</th>
     <th class='col-md-3'>ステータス</th>
     </tr>
     </thead>
    </div>



 <div class='row'>
   <tbody class="text-left">
     <% @customers.each do |customer| %>
    <tr>
     <td><%= customer.id %></td>
     <td><%= link_to admin_customer_path(customer.id) do %>
       <%= customer.name %>
      <% end %>
     </td>
     <td><%= customer.email %></td>
     <td class="<%= customer.is_active ? 'text-success' : '' %>">
      <%= customer.is_active ? "有効" : "退会" %>
      </td>
      </tr>
      <% end %>
     </tbody>
 </div>
 </table>

 <div class='row text-center'>
  <div class='col-md-3'></div>
  <div class='col-md-6'>
   <%= paginate @customers %></div>
  <div class='col-md-3'></div>
</div>