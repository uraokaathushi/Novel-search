<%= form_with model: genre, method: :post, url: admin_genres_path, local: false, html: {class: 'p-5 shadow-lg'}, data: { remote: true } do |f| %>
  <div class="form-group">
    <%= f.label :genre_name, 'ジャンル名', class: 'col-md-2' %>
    <%= f.text_field :genre_name, autofocus: true, autocomplete: 'off', class: 'col-md-6', id: "genre_name_text_field" %>
    <%= f.submit '追加', class: 'btn btn-sm btn-outline-info col-md-2 offset-1' %>
  </div>
<% end %>