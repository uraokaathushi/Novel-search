<div class="item-wrap row mb-5">
<% genres.each do |genre| %>
  <div class="item shadow-sm col-md-4 p-3 my-3">
    <%= genre.genre_name %>
    <%= link_to admin_genre_path(genre.id), method: :delete, remote: true, style: 'color: red;', 'data-confirm'=>'このタグを削除します', 'data-disable-with'=>'Deleting...' do %>
      <i class="fas fa-trash-alt">削除</i>
    <% end %>
  </div>
<% end %>
</div>