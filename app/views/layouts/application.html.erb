<!DOCTYPE html>
<html>
  <head>
    <title>NovelSearch</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header class="shadow-sm border-bottom border-dark">
    <div class="container">
     <div class="row">
      <div class="col-md-4 text-center" style="background-color: #f0f0f0; padding: 20px;">
       <h1>
        <% if current_admin %>
         <%= link_to "Novel-Search", admin_path, style: "text-decoration: none; color: #009933;" %>
        <% else %>
         <%= link_to "Novel-Search", root_path, style: "text-decoration: none; color: #009933;" %>
        <% end %>
        </h1>
       </div>
      <div class="col-md-1"></div>
       <div class="col-md-7">
        <div class="row">
         <div id="navbarDropdown">
          <div class="ml-auto">
           <ul class="navbar-nav" style="flex-direction: unset;">
            <% if customer_signed_in? %>
              <li class="navbar-link my-1"><%= link_to about_path, :style => "margin-left: 20px;" do %>
               <i class="fa-solid fa-house custom-link">アバウト</i>
              <% end %>
              </li>
             <% if current_customer.email != 'guest@example.com' %>
              <li class="navbar-link my-1"><%= link_to public_customer_my_page_path, :style => "margin-left: 20px;" do %>
               <i class="fa-solid fa-book custom-link">マイページ</i>
              <% end %>
              </li>
             <% end %>
              <li class="navbar-link my-1"><%= link_to public_novels_path, :style => "margin-left: 20px;" do %>
               <i class="fa-solid fa-magnifying-glass custom-link">作品検索</i>
              <% end %>
              </li>
              <li class="navbar-link my-1 "><%= link_to destroy_customer_session_path, method: :delete, :style => "margin-left: 20px;" do %>
              <i class="fa-solid fa-right-from-bracket custom-link">ログアウト</i>
              <% end %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="navbar-link my-1"><%= link_to admin_novels_path, :style => "margin-left: 20px;" do %>
               <i class="fa-solid fa-list custom-link">レビュー管理</i>
              <% end %>
              </li>
              <li class="navbar-link my-1"><%= link_to admin_customers_path, :style => "margin-left: 20px;" do %>
               <i class="fa-solid fa-users custom-link">会員一覧</i>
              <% end %>
              </li>
              <li class="navbar-link my-1"><%= link_to admin_genres_path, :style => "margin-left: 20px;" do %>
               <i class="fa-solid fa-square-check custom-link">ジャンル一覧</i>
              <% end %>
              </li>
              <li class="navbar-link my-1"><%= link_to destroy_admin_session_path, method: :delete,:style => "margin-left: 20px;" do %>
               <i class="fa-solid fa-right-from-bracket custom-link">ログアウト</i>
              <% end %>
              </li>
           <% else %>
              <li class="navbar-link my-1"><%= link_to about_path, :style => "margin-left: 20px;" do %>
               <i class="fa-solid fa-house custom-link">アバウト</i>
              <% end %>
              </li>
              <li class="navbar-link my-1"><%= link_to new_customer_registration_path, :style => "margin-left: 20px;" do %>
               <i class="fa-solid fa-user-plus custom-link">新規登録</i>
              <% end %>
              </li>
              <li class="navbar-link my-1"><%= link_to new_customer_session_path, :style => "margin-left: 20px;" do %>
               <i class="fa-solid fa-right-to-bracket custom-link">ログイン</i>
              <% end %>
              </li>
              <li class="navbar-link my-1"><%= link_to new_admin_session_path, :style => "margin-left: 20px;" do %>
               <i class="fa-solid fa-arrow-right-to-bracket custom-link">管理者ログイン</i>
              <% end %>
              </li>
              <li class="navbar-link my-1"><%= link_to customer_guest_sign_in_path, class: "sign_in", method: :post, :style => "margin-left: 20px;" do %>
               <i class="fa-regular fa-user custom-link">ゲストログイン(閲覧用)</i>
              <% end %>
              </li>
             <% end %>
           </ul>
          </div>
         </div>
        </div>
        <div class="row mb-5"></div>
       </div>
     </div>
    </div>
   </header>
        <main class="mb-auto">
        <%= yield %>
        </main>
        <footer class="shadow-sm border-top border-dark">
        <div class="container">
         <div class="row">
          <div class="col-md-12 text-center" style="background-color: #f0f0f0; color: #009933;  padding: 20px;">
           <h1>NovelSearch</h1>
          </div>

        </footer>

    </body>
</html>
