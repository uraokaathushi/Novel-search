
    <div class="row">
      <div class="col-md-7">
        <a href="<%= public_novel_path(novel)%>">
        <%= novel.title %></a></div>
      <div class="col-md-5">
     <% if novel.customer_id == current_customer.id %>
     <%= link_to edit_public_novel_path(novel), class: "btn btn-success btn-lg" do %>
       <i>編集する</i>
       <% end %>
      <% end %>
      </div>
    </div>

     <div class="row my-3">
      <div class="col-md-3">ジャンル</div>
      <div class="col-md-9"><%= novel.genres.pluck(:genre_name).join(' / ') %></div>
    </div>


    <div class="row">
      <div class="col-md-2"><p>サイト</p></div>
      <div class="col-md-7"><%= novel.site_name %></div>
      <div class="col-md-3"></div>
    </div>

    <div class="row">
      <div class="col-md-2"><p>レビュー</p></div>
      <div class="col-md-10"><%= novel.review %></div>
    </div>

    <div class="row">
     <%= render "public/novels/static_rate", novel: novel %>
    </div>



