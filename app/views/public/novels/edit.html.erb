<div class='container'>

  <div class='row'>
     <div class='col-md-1'></div>
   <div class='col-md-3 text-center'>
    <h3 class="table-active">投稿作品編集</h3>
   </div>
   <div class='col-md-9'></div>
   </div>

  <div class="mb-4"></div>

     <%= form_with model: @novel, url: public_novel_path, local: true do |f| %>

    <div class="row">
     <div class="col-md-2"><p>タイトル</p></div>
   　 <div class="col-md-7"><%= f.text_field :title, autofocus: true %></div>
      <div class="col-md-3"></div>
    </div>

    <!--<div class="row">-->
    <!-- <div class="col-md-2"><p>ジャンル</p></div>-->
    <!-- <div class="col-md-7"><!%= f.text_field :genre_name, autofocus: true %></div>-->
    <!--</div>-->

    <div class="row">
      <div class="col-md-2"><p>サイト</p></div>
      <div class="col-md-7"><%= f.text_field :site_name, autofocus: true %></div>
      <div class="col-md-3"></div>
    </div>

    <div class="row">
      <div class="col-md-2"><p>レビュー</p></div>
      <div class="col-md-10"><%= f.text_area :review, autofocus: true %></div>
    </div>

  <div class="row">
    <div class="form-group" id="new_star">
      <%= f.label :star %>
      <%= f.hidden_field :star, id: :review_star, class: 'form-control' %>
      <div id="post_raty"></div>
    </div>
    <script>
      $(document).on('turbolinks:load', function() {
        let elem = document.querySelector('#post_raty');
        if (elem == null) return;

        elem.innerHTML = ""
        let opt = {
          starOn: "/assets/star-on.png",
          starOff: "/assets/star-off.png",
          starHalf: "/assets/star-half.png",
          scoreName: 'novel[star]',
        };
        raty(elem, opt);
      });
    </script>
  </div>

    <div class='row'>
      <div class="col-md-7 text-right">
        <div class="actions">
       　　<%= f.submit "編集内容を保存", class:"btn btn-success btn-lg", style: "width: 50%" %>
     　　</div>
     　</div>
    </div>

    <div class='row'>
    <%= link_to '削除', public_novel_path(novel), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    </div>



  <% end %>

</div>