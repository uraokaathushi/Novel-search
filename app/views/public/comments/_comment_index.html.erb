<table>
      <tbody>
         <% @novel.comments.each do |comment| %>
        <tr>
          <td>
           <%= comment.customer.name %>
          </td>
          <td><%= comment.comment %></td>
          <td>
           <% if comment.customer == current_customer %>
            <%= link_to '削除', public_novel_comment_path(@novel, comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
           <% end %>
           </td>
          </tr>
        <% end %>
      </tbody>
</table>